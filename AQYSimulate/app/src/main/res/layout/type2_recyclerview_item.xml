<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:gravity="center_vertical"
    android:padding="3dp">

    <ImageView
        android:id="@+id/left_icon_imageview"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:paddingLeft="5dp"
        android:scaleType="fitStart"
        android:src="@drawable/ico_bottom_vip" />

    <TextView
        android:id="@+id/text_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/left_icon_imageview"
        android:paddingLeft="5dp"
        android:text="暑期签到领豪礼! VR眼镜、VIP会员大放送"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/right_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="点击打开APP"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/right_arrow"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/search_arrow_right" />
</RelativeLayout>