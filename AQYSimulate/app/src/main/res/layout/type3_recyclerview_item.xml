<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="1dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/left_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/horizontal_picture" />

            <ImageView
                android:id="@+id/left_rifht_up_title"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:src="@drawable/src_assets_pprn_see_all_arrow" />
            <TextView
                android:id="@+id/left_right_bottom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:gravity="center"
                android:padding="2dp"
                android:text="01:25"
                android:textColor="@color/prime"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/left_left_bottom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:gravity="center"
                android:padding="2dp"
                android:text="今日00:00发布"
                android:textColor="@color/prime"
                android:textSize="10sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/left_up_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="中国新歌声"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/left_down_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="周杰伦花式调侃陈奕迅表情包"
            android:textColor="@color/gray"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="1dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/right_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/horizontal_picture" />

            <ImageView
                android:id="@+id/right_rifht_up_title"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:src="@drawable/src_assets_pprn_see_all_arrow" />

            <TextView
                android:id="@+id/right_right_bottom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:gravity="center"
                android:padding="2dp"
                android:text="01:25"
                android:textColor="@color/prime"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/right_left_bottom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:gravity="center"
                android:padding="2dp"
                android:text="今日00:00发布"
                android:textColor="@color/prime"
                android:textSize="10sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/right_up_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="中国新歌声"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/right_down_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="周杰伦花式调侃陈奕迅表情包"
            android:textColor="@color/gray"
            android:textSize="11sp" />

    </LinearLayout>
</LinearLayout>